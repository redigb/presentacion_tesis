---
import Layout from '../layouts/Slide.astro';

// IMPORTAR LOS GIFS
import gif_dashboard_table from '../assets/gifts/admin_dashboard.gif'; 
import gif_dashboard_map from '../assets/gifts/vista_ioti_gps.gif';     
import gif_mobile_app from '../assets/gifts/movil_app.gif';   
---

<style>
  @import url('https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;600;700;800&display=swap');

  /* --- LAYOUT FULL SCREEN (SIN BARRA LATERAL) --- */
  .slide-container {
    width: 100vw;
    height: 100vh;
    background-color: #ffffff;
    /* Fondo sutil */
    background-image: radial-gradient(#e2e8f0 1px, transparent 1px);
    background-size: 50px 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Manrope', system-ui, sans-serif;
    overflow: hidden;
    /* Padding reducido en los bordes para maximizar espacio */
    padding: 0 3rem; 
    box-sizing: border-box;
  }

  /* GRID PRINCIPAL (ASIMÉTRICO) */
  .main-grid {
    display: grid;
    width: 100%;
    height: 90vh; /* Usamos casi toda la altura */
    /* 25% Texto - 75% Visuales (Para que las pantallas sean gigantes) */
    grid-template-columns: 25% 75%; 
    gap: 3rem;
    align-items: center;
  }

  /* --- IZQUIERDA: TEXTO --- */
  .text-section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-right: 1rem;
  }

  .header-area {
    margin-bottom: 2.5rem;
    position: relative;
    /* Línea de acento más sutil ahora */
    border-left: 4px solid #1D4E89;
    padding-left: 1.5rem;
  }

h1 {
    font-size: 3.5rem;
    font-weight: 800;
    color: #111827;
    margin: 0 0 3.5rem 0;
    letter-spacing: -2px;
    opacity: 0;
    animation: titleReveal 0.8s cubic-bezier(0.2, 1, 0.3, 1) forwards;
  }

  .description {
    font-size: 1rem;
    color: #64748b;
    margin-top: 1rem;
    line-height: 1.5;
    opacity: 0;
    animation: slideInLeft 0.8s ease-out 0.4s forwards;
  }

  /* BOTONES / CARACTERÍSTICAS */
  .features {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: 12px;
    background: #ffffff;
    padding: 14px 18px;
    border-radius: 12px;
    border: 1px solid #e2e8f0;
    text-decoration: none;
    box-shadow: 0 4px 10px -2px rgba(0,0,0,0.05);
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
    transition: all 0.3s ease;
    cursor: pointer;
  }
  
  .feature-item:hover { 
    transform: translateX(5px); 
    border-color: #1D4E89; 
    box-shadow: 0 10px 25px rgba(29, 78, 137, 0.1);
  }

  .feature-item:nth-child(1) { animation-delay: 0.6s; }
  .feature-item:nth-child(2) { animation-delay: 0.8s; }

  .icon-box {
    width: 36px; height: 36px;
    background: #f1f5f9; color: #1D4E89;
    border-radius: 8px; display: flex; align-items: center; justify-content: center;
    flex-shrink: 0;
  }

  .feature-title { font-size: 0.95rem; font-weight: 800; color: #0f172a; display: block; }
  .feature-desc { font-size: 0.75rem; color: #64748b; display: block; }

  /* --- DERECHA: VISUALES (ÁREA EXPANDIDA) --- */
  .visual-container {
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: center;
    /* Gap vertical entre monitores y celular */
    gap: 2rem; 
  }

  /* FILA 1: MONITORES WEB */
  .web-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem; /* Buen espacio entre monitores */
    width: 100%;
    align-items: center;
  }

  .screen-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    opacity: 0;
    transform: translateY(30px);
  }

  .screen-wrapper:nth-child(1) { animation: fadeInUp 0.8s ease-out 0.5s forwards; }
  .screen-wrapper:nth-child(2) { animation: fadeInUp 0.8s ease-out 0.7s forwards; }

  /* Mockup Navegador (Estirado) */
  .browser-mockup {
    width: 100%;
    /* Aspect ratio panorámico para que se vea más contenido */
    aspect-ratio: 16/9; 
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 20px 50px -10px rgba(0,0,0,0.15);
    border: 1px solid #cbd5e1;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .browser-mockup:hover { transform: scale(1.03); z-index: 20; box-shadow: 0 30px 60px -10px rgba(29, 78, 137, 0.2); }

  .browser-header {
    height: 24px; background: #f8fafc; border-bottom: 1px solid #e2e8f0;
    display: flex; align-items: center; gap: 6px; padding-left: 12px;
  }
  .dot { width: 8px; height: 8px; border-radius: 50%; }
  .red { background: #ef4444; } .yellow { background: #f59e0b; } .green { background: #10b981; }

  /* FILA 2: MÓVIL */
  .mobile-row {
    display: flex;
    justify-content: center;
    height: 280px; /* Altura fija para contener el celular */
    position: relative;
  }

  .phone-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12px;
    opacity: 0;
    transform: translateY(40px);
    animation: fadeInUp 0.8s ease-out 0.9s forwards;
  }

  .phone-mockup {
    height: 100%;
    width: auto; /* El ancho se ajusta a la altura */
    aspect-ratio: 9/19;
    background: #0f172a;
    border-radius: 28px;
    border: 5px solid #1e293b;
    box-shadow: 0 20px 40px rgba(0,0,0,0.25);
    overflow: hidden;
    position: relative;
  }

  .phone-notch {
    position: absolute; top: 0; left: 50%; transform: translateX(-50%);
    width: 50%; height: 14px; background: #1e293b;
    border-bottom-left-radius: 8px; border-bottom-right-radius: 8px; z-index: 10;
  }

  /* IMÁGENES (LLENADO COMPLETO) */
  .screen-img {
    width: 100%;
    height: 100%;
    object-fit: fill; /* Forzar llenado del contenedor */
    display: block;
  }

  /* ETIQUETAS (BADGES) */
  .label-pill {
    background: #0f172a;
    color: white;
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  }

  /* ANIMACIONES */
  @keyframes slideInLeft { from { opacity: 0; transform: translateX(-40px); } to { opacity: 1; transform: translateX(0); } }
  @keyframes fadeInUp { from { opacity: 0; transform: translateY(40px); } to { opacity: 1; transform: translateY(0); } }

</style>

<Layout title="Dashboard Gerencial">
  <div class="slide-container">
    
    <div class="main-grid">
      
      <div class="text-section">
        <div class="header-area">
          <h1>Dashboard Gerencial</h1>
          <p class="description">
            Control total en tiempo real. Supervisión de créditos y monitoreo GPS en una plataforma unificada.
          </p>
        </div>

        <div class="features">
          <a href="https://front-admin-score-zidra.vercel.app/" target="_blank" class="feature-item">
            <div class="icon-box">
              <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect><line x1="8" y1="21" x2="16" y2="21"></line><line x1="12" y1="17" x2="12" y2="21"></line></svg>
            </div>
            <div>
              <span class="feature-title">Web Admin</span>
              <span class="feature-desc">Clic para ver demo.</span>
            </div>
          </a>

          <div class="feature-item">
            <div class="icon-box">
              <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect><line x1="12" y1="18" x2="12.01" y2="18"></line></svg>
            </div>
            <div>
              <span class="feature-title">App Móvil</span>
              <span class="feature-desc">Herramienta asesores.</span>
            </div>
          </div>
        </div>
      </div>

      <div class="visual-container">
        
        <div class="web-row">
          <div class="screen-wrapper">
            <div class="browser-mockup">
              <div class="browser-header"><span class="dot red"></span><span class="dot yellow"></span><span class="dot green"></span></div>
              <img class="screen-img" src={gif_dashboard_table} alt="Gestión Créditos" />
            </div>
            <span class="label-pill">Gestión Créditos</span>
          </div>

          <div class="screen-wrapper">
            <div class="browser-mockup">
              <div class="browser-header"><span class="dot red"></span><span class="dot yellow"></span><span class="dot green"></span></div>
              <img class="screen-img" src={gif_dashboard_map} alt="Mapa GPS" />
            </div>
            <span class="label-pill">Monitoreo GPS</span>
          </div>
        </div>

        <div class="mobile-row">
          <div class="phone-wrapper">
            <div class="phone-mockup">
              <div class="phone-notch"></div>
              <img class="screen-img" src={gif_mobile_app} alt="App Móvil" />
            </div>
            <span class="label-pill">App Asesores</span>
          </div>
        </div>

      </div>

    </div>
  </div>
</Layout>