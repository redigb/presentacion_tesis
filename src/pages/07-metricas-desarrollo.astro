---
import Layout from '../layouts/Slide.astro';
// Importamos el GIF.
import video_metrics from '../assets/gifts/video_replay_mericas.gif';

// DATOS REALES
const metrics = [
  {
    label: "AUC SCORE",
    value: "80.33%",
    desc: "Poder predictivo",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 12h4l3 8 4-16 3 8h4"></path></svg>`
  },
  {
    label: "KS SCORE",
    value: "50.34%",
    desc: "Separación",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="20" x2="18" y2="10"></line><line x1="12" y1="20" x2="12" y2="4"></line><line x1="6" y1="20" x2="6" y2="14"></line></svg>`
  },
  {
    label: "F1 BALANCE",
    value: "83.33%",
    desc: "Precisión vs Recall",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>`
  },
  {
    label: "ÚLTIMO ENTRENO",
    value: "21 nov. 2025",
    desc: "03:49 a. m.",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>`
  }
];
---

<style>
  @import url('https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;600;700;800&display=swap');

  /* --- LAYOUT --- */
  .slide-container {
    width: 100%;
    height: 100vh;
    background-color: #ffffff;
    background-image: radial-gradient(#e2e8f0 1px, transparent 1px);
    background-size: 40px 40px;
    display: flex;
    font-family: 'Manrope', system-ui, sans-serif;
    overflow: hidden;
  }

  .left-bar {
    width: 80px;
    height: 100%;
    background: #1D4E89;
    flex-shrink: 0;
    z-index: 10;
  }

  .main-content {
    flex-grow: 1;
    padding: 0 5rem; 
    display: grid;
    grid-template-columns: 35% 65%; 
    align-items: center;
    gap: 4rem;
    position: relative;
    z-index: 5;
  }

  /* --- FONDO "05" --- */
  .watermark {
    position: absolute;
    top: -5%; left: 2%;
    font-size: 18rem;
    font-weight: 800;
    color: transparent;
    -webkit-text-stroke: 2px rgba(29, 78, 137, 0.05);
    z-index: -1;
    opacity: 0;
    animation: fadeIn 1.5s ease-out forwards;
  }

  /* --- SECCIÓN IZQUIERDA (MÉTRICAS) --- */
  .info-section {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .header-area { margin-bottom: 2rem; }

  h1 {
    font-size: 3rem;
    font-weight: 800;
    color: #0f172a;
    line-height: 1.1;
    margin-bottom: 0.5rem;
    opacity: 0;
    animation: slideInLeft 0.8s ease-out 0.2s forwards;
  }

  .subtitle {
    font-size: 1rem;
    color: #64748b;
    opacity: 0;
    animation: slideInLeft 0.8s ease-out 0.4s forwards;
  }

  .metrics-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .metric-card {
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid #e2e8f0;
    border-left: 5px solid #1D4E89;
    border-radius: 12px;
    padding: 1rem;
    display: flex;
    align-items: center;
    gap: 1.2rem;
    box-shadow: 0 4px 15px rgba(0,0,0,0.05);
    opacity: 0;
    transform: translateX(-20px);
    animation: fadeInUpCard 0.6s ease-out forwards;
  }

  .metric-card:nth-child(1) { animation-delay: 0.6s; }
  .metric-card:nth-child(2) { animation-delay: 0.8s; }
  .metric-card:nth-child(3) { animation-delay: 1.0s; }
  .metric-card:nth-child(4) { animation-delay: 1.2s; }

  .metric-icon {
    width: 45px; height: 45px;
    background: #f8fafc;
    border-radius: 10px;
    display: flex; align-items: center; justify-content: center;
    color: #1D4E89;
    flex-shrink: 0;
  }

  .metric-data { display: flex; flex-direction: column; }
  .metric-value { font-size: 1.8rem; font-weight: 800; color: #0f172a; line-height: 1; }
  .metric-label { font-size: 0.75rem; font-weight: 700; color: #64748b; text-transform: uppercase; letter-spacing: 0.5px; margin-bottom: 2px; }
  .metric-desc { font-size: 0.75rem; color: #94a3b8; }

  /* --- SECCIÓN DERECHA (VIDEO FRAME) --- */
  .visual-section {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    perspective: 1000px;
  }

  .screen-frame {
    width: 100%;
    max-width: 900px; /* Un poco más ancho */
    /* Eliminamos el aspect-ratio fijo para que se adapte a la imagen, 
       o lo ajustamos para que no recorte */
    height: auto; 
    background: #0f172a;
    border-radius: 12px;
    padding: 8px;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    position: relative;
    
    opacity: 0;
    transform: rotateY(-5deg) translateY(30px);
    animation: 
      screenEntrance 1s cubic-bezier(0.2, 0.8, 0.2, 1) 0.5s forwards,
      floatScreen 6s ease-in-out 1.5s infinite;
  }

  .window-header {
    height: 18px;
    background: #1e293b;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    display: flex;
    align-items: center;
    padding-left: 8px;
    gap: 6px;
  }

  .dot { width: 8px; height: 8px; border-radius: 50%; }
  .red { background: #ef4444; }
  .yellow { background: #f59e0b; }
  .green { background: #10b981; }

  .video-content {
    width: 100%;
    /* Quitamos altura fija para que se adapte al contenido */
    height: auto;
    background: #000;
    border-bottom-left-radius: 6px;
    border-bottom-right-radius: 6px;
    overflow: hidden;
    position: relative;
    display: block; /* Evita espacios extra */
  }

  /* CORRECCIÓN AQUÍ: CONTAIN en vez de COVER */
  .video-content img {
    width: 100%;
    height: auto;
    display: block;
    /* Esto asegura que se vea TODA la imagen sin recortes */
    object-fit: contain; 
  }

  .screen-frame::after {
    content: '';
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    background: linear-gradient(135deg, rgba(255,255,255,0.05) 0%, transparent 40%);
    pointer-events: none;
    border-radius: 12px;
    z-index: 10;
  }

  @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
  @keyframes slideInLeft { from { opacity: 0; transform: translateX(-30px); } to { opacity: 1; transform: translateX(0); } }
  @keyframes fadeInUpCard { from { opacity: 0; transform: translateX(-20px); } to { opacity: 1; transform: translateX(0); } }
  @keyframes screenEntrance { to { opacity: 1; transform: rotateY(0deg) translateY(0); } }
  @keyframes floatScreen { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(-8px); } }

</style>

<Layout title="Métricas y Validación">
  <div class="slide-container">
    <div class="left-bar"></div>
    <div class="watermark">05</div>

    <div class="main-content">
      
      <div class="info-section">
        <div class="header-area">
          <h1>Validación del Modelo</h1>
          <p class="subtitle">Métricas de desempeño en entorno de producción.</p>
        </div>

        <div class="metrics-container">
          {metrics.map((m) => (
            <div class="metric-card">
              <div class="metric-icon" set:html={m.icon}></div>
              <div class="metric-data">
                <span class="metric-label">{m.label}</span>
                <span class="metric-value">{m.value}</span>
                <span class="metric-desc">{m.desc}</span>
              </div>
            </div>
          ))}
        </div>
      </div>

      <div class="visual-section">
        <div class="screen-frame">
          <div class="window-header">
            <span class="dot red"></span>
            <span class="dot yellow"></span>
            <span class="dot green"></span>
          </div>
          
          <div class="video-content">
            <img src={video_metrics} alt="Demo Métricas Animadas" />
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>