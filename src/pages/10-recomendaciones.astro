---
import Layout from '../layouts/Slide.astro';

const recommendations = [
  {
    id: "01",
    badge: "CALIDAD & REENTRENAMIENTO",
    title: "Gestión de Datos Históricos",
    desc: "Establecer un proceso permanente de limpieza y actualización de datos para reentrenar los modelos predictivos y mantener la precisión ante nuevos escenarios.",
    // Icono: Base de datos
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 5V19a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V5a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2z"></path><path d="M3 12h18"></path><path d="M12 17v-1"></path><path d="M12 11v-1"></path><path d="M12 5v-1"></path></svg>`
  },
  {
    id: "02",
    badge: "COBERTURA TOTAL",
    title: "Expansión IoT-GPS",
    desc: "Ampliar gradualmente la integración de dispositivos IoT a todos los activos financiados de alto valor y posteriormente a los de riesgo medio.",
    // Icono: Ubicación
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s-8-10.5-8-17a8 8 0 0 1 16 0c0 6.5-8 17-8 17z"></path><circle cx="12" cy="10" r="3"></circle></svg>`
  },
  {
    id: "03",
    badge: "INTEGRACIÓN EXTERNA",
    title: "Escalabilidad del Sistema",
    desc: "Planificar la conexión con APIs externas (RENIEC, SUNAT) y evolucionar hacia modelos de IA más avanzados como Redes Neuronales.",
    // Icono: Red/Global
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg>`
  }
];
---

<style>
  @import url('https://fonts.googleapis.com/css2?family=Manrope:wght@400;600;700;800&display=swap');

  /* --- LAYOUT --- */
  .slide-container {
    width: 100%;
    height: 100vh;
    background-color: #ffffff;
    display: flex;
    font-family: 'Manrope', sans-serif;
    overflow: hidden;
  }

  .left-bar {
    width: 80px;
    height: 100%;
    background: #1D4E89;
    flex-shrink: 0;
    z-index: 10;
    box-shadow: 4px 0 20px rgba(0,0,0,0.15);
  }

  .main-content {
    flex-grow: 1;
    padding: 3rem 5rem;
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 5;
    /* Centrado vertical */
    justify-content: center; 
  }

  /* --- HEADER --- */
  .header-area {
    margin-bottom: 2rem;
    position: relative;
  }

  .watermark {
    position: absolute;
    top: -65px; left: -10px;
    font-size: 10rem; /* Un poco más pequeño para que no invada tanto */
    font-weight: 800;
    color: transparent;
    /* Estilo Outline */
    -webkit-text-stroke: 2px rgba(29, 78, 137, 0.08);
    z-index: -1;
    line-height: 1;
    opacity: 0;
    animation: fadeIn 1.5s ease-out forwards;
  }

h1 {
    font-size: 3.5rem;
    font-weight: 800;
    color: #111827;
    margin: 0 0 3.5rem 0;
    letter-spacing: -2px;
    opacity: 0;
    animation: titleReveal 0.8s cubic-bezier(0.2, 1, 0.3, 1) forwards;
  }

  /* --- HERO BANNER (NEGRO/AZUL OSCURO) --- */
  .strategy-banner {
    background: #0f172a; /* Fondo oscuro sólido como en la imagen */
    border-radius: 12px;
    padding: 1.5rem 2.5rem;
    color: white;
    margin-bottom: 3rem;
    display: flex;
    align-items: center;
    gap: 1.5rem;
    box-shadow: 0 10px 30px -5px rgba(0,0,0,0.3);
    position: relative;
    overflow: hidden;
    
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) 0.4s forwards;
  }
  
  /* Barra inferior azul brillante */
  .strategy-banner::after {
    content: '';
    position: absolute; bottom: 0; left: 0; width: 100%; height: 4px;
    background: #3b82f6;
  }

  .icon-strategy {
    width: 48px; height: 48px;
    background: rgba(255,255,255,0.1);
    border-radius: 12px;
    display: flex; align-items: center; justify-content: center;
    border: 1px solid rgba(255,255,255,0.2);
    flex-shrink: 0;
  }

  .strategy-content strong {
    display: block;
    font-size: 1rem;
    font-weight: 800;
    letter-spacing: 1px;
    text-transform: uppercase;
    margin-bottom: 4px;
  }

  .strategy-content span {
    font-size: 0.95rem;
    opacity: 0.8;
  }

  /* --- GRID DE 3 COLUMNAS --- */
  .rec-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    align-items: stretch;
  }

  /* TARJETA ESTILO IMAGEN */
  .rec-card {
    background: #ffffff;
    border: 1px solid #e2e8f0;
    border-radius: 16px;
    padding: 2rem;
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    box-shadow: 0 4px 10px rgba(0,0,0,0.03);
    
    /* Animación Entrada + Respiración */
    opacity: 0;
    transform: translateY(40px);
    animation: 
      cardUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards,
      breathe 6s ease-in-out infinite;
  }

  /* Cascada */
  .rec-card:nth-child(1) { animation-delay: 0.6s, 1.4s; }
  .rec-card:nth-child(2) { animation-delay: 0.8s, 1.6s; }
  .rec-card:nth-child(3) { animation-delay: 1.0s, 1.8s; }

  /* Icono Cuadrado Azul */
  .card-icon-box {
    width: 56px; height: 56px;
    background: #64748b; /* Un gris azulado como en la imagen */
    background: linear-gradient(135deg, #94a3b8 0%, #64748b 100%);
    color: white;
    border-radius: 12px;
    display: flex; align-items: center; justify-content: center;
    margin-bottom: 1rem;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  }

  /* Número de fondo (01, 02...) */
  .card-number-bg {
    position: absolute; top: 1.5rem; right: 1.5rem;
    font-size: 4rem; font-weight: 800;
    color: #f1f5f9; /* Muy sutil */
    line-height: 1;
    user-select: none;
    font-family: 'Manrope', sans-serif;
  }

  /* Badge Azul Claro */
  .subtitle-tag {
    display: inline-block;
    font-size: 0.7rem; font-weight: 800; color: #3b82f6;
    background: #eff6ff; padding: 6px 12px; border-radius: 6px;
    letter-spacing: 1px; text-transform: uppercase;
    margin-bottom: 0.5rem; width: fit-content;
  }

  h3 {
    font-size: 1.2rem; font-weight: 800; color: #0f172a;
    margin: 0 0 0.5rem 0;
  }

  p {
    font-size: 0.95rem; color: #64748b;
    line-height: 1.6; margin: 0;
  }

  /* --- ANIMACIONES --- */
  @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
  @keyframes slideInLeft { from { opacity: 0; transform: translateX(-40px); } to { opacity: 1; transform: translateX(0); } }
  @keyframes fadeInUp { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
  
  @keyframes cardUp {
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes breathe {
    0%, 100% { transform: translateY(0); box-shadow: 0 4px 10px rgba(0,0,0,0.03); }
    50% { transform: translateY(-5px); box-shadow: 0 15px 30px rgba(0,0,0,0.08); }
  }

</style>

<Layout title="Recomendaciones">
  <div class="slide-container">
    <div class="left-bar"></div>

    <div class="main-content">
      
      <div class="header-area">
        <!-- Número 07 (Secuencia correcta) -->
        <span class="watermark">06</span>
        <h1>Recomendaciones</h1>
      </div>

      <!-- HERO BANNER (Visión Estratégica) -->
      <div class="strategy-banner">
        <div class="icon-strategy">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="23 6 13.5 15.5 8.5 10.5 1 18"></polyline><polyline points="17 6 23 6 23 12"></polyline></svg>
        </div>
        <div class="strategy-content">
          <strong>Visión Estratégica</strong>
          <span>Acciones clave para garantizar la sostenibilidad y mejora continua del sistema.</span>
        </div>
      </div>

      <!-- GRID DE RECOMENDACIONES -->
      <div class="rec-grid">
        {recommendations.map((item) => (
          <div class="rec-card">
            <span class="card-number-bg">{item.id}</span>
            
            <div class="card-icon-box" set:html={item.icon}></div>
            
            <span class="subtitle-tag">{item.badge}</span>
            <h3>{item.title}</h3>
            <p>{item.desc}</p>
          </div>
        ))}
      </div>

    </div>
  </div>
</Layout>