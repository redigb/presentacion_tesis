---
import Layout from '../layouts/Slide.astro';

const items = [
  { number: '01', title: 'Problemática' },
  { number: '02', title: 'Objetivos' },
  { number: '03', title: 'Tecnologías' },
  { number: '04', title: 'Proceso de Desarrollo' },
  { number: '05', title: 'Conclusiones' },
  { number: '06', title: 'Recomendaciones' },
];
---

<style>
  @import url('https://fonts.googleapis.com/css2?family=Manrope:wght@300;400;700;800&display=swap');

  .slide-container {
    position: relative;
    width: 100%;
    height: 100vh;
    background-color: #ffffff;
    /* Patrón de puntos sutil */
    background-image: radial-gradient(#d1d5db 1px, transparent 1px);
    background-size: 30px 30px;
    display: flex;
    font-family: 'Manrope', system-ui, sans-serif;
    overflow: hidden;
  }

  /* --- DETALLE AMBIENTAL (NUEVO) --- 
     Un resplandor azul suave en la esquina inferior derecha 
     para dar profundidad y conectar con el logo de SENATI.
  */
  .bg-glow {
    position: absolute;
    bottom: -100px;
    right: -100px;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(46, 99, 229, 0.08) 0%, rgba(255,255,255,0) 70%);
    border-radius: 50%;
    z-index: 1;
    pointer-events: none;
  }

  /* BARRA LATERAL */
  .left-bar {
    width: 80px;
    height: 100%;
    background: #1D4E89;
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    padding-bottom: 2rem;
    z-index: 10;
  }

  .accent-line {
    width: 4px;
    height: 60px;
    background-color: rgba(255, 255, 255, 0.4);
    border-radius: 4px;
  }

  /* CONTENIDO PRINCIPAL */
  .main-content {
    flex-grow: 1;
    padding: 4rem 6rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    z-index: 5;
  }

  h1 {
    font-size: 5rem;
    font-weight: 800;
    color: #111827;
    margin: 0 0 3.5rem 0;
    letter-spacing: -2px;
    opacity: 0;
    animation: titleReveal 0.8s cubic-bezier(0.2, 1, 0.3, 1) forwards;
  }

  .grid-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    column-gap: 4rem;
    row-gap: 2rem;
    max-width: 1100px;
  }

  /* --- ITEM (TARJETA) --- */
  .item {
    position: relative; /* Necesario para los bordes absolutos */
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 1.5rem;
    /* Fondo muy sutil para diferenciar del blanco general */
    background: rgba(255, 255, 255, 0.6);
    border: 1px solid rgba(0, 0, 0, 0.03);
    opacity: 0;
    animation: cardEntry 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275) forwards;
  }

  /* Cascada (Stagger) */
  .item:nth-child(1) { animation-delay: 0.3s; }
  .item:nth-child(2) { animation-delay: 0.45s; }
  .item:nth-child(3) { animation-delay: 0.6s; }
  .item:nth-child(4) { animation-delay: 0.75s; }
  .item:nth-child(5) { animation-delay: 0.9s; }
  .item:nth-child(6) { animation-delay: 1.05s; }

  /* --- DETALLE TECH (ESQUINAS) --- 
     Esto crea unas pequeñas esquinas azules en cada item.
     Le da un look muy de "panel de control".
  */
  .item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 10px;
    height: 10px;
    border-top: 2px solid #2E63E5; /* Azul */
    border-left: 2px solid #2E63E5;
    opacity: 0.5;
  }

  .number {
    font-size: 3.5rem;
    font-weight: 800;
    color: #1D4E89;
    line-height: 1;
    margin-bottom: 0.2rem;
    transform: translateY(20px);
    opacity: 0;
    animation: numberDrop 0.5s ease-out forwards;
  }
  
  /* Sincronizamos el número con el item */
  .item:nth-child(1) .number { animation-delay: 0.35s; }
  .item:nth-child(2) .number { animation-delay: 0.5s; }
  .item:nth-child(3) .number { animation-delay: 0.65s; }
  .item:nth-child(4) .number { animation-delay: 0.8s; }
  .item:nth-child(5) .number { animation-delay: 0.95s; }
  .item:nth-child(6) .number { animation-delay: 1.1s; }

  .label {
    font-size: 1.8rem;
    font-weight: 500;
    color: #374151;
    display: block;
  }

  /* Línea animada */
  .line {
    display: block;
    width: 0%;
    height: 3px;
    background: #2E63E5;
    margin-top: 8px;
    border-radius: 2px;
    opacity: 0.7;
    animation: lineGrow 0.6s ease-out forwards;
  }

  .item:nth-child(1) .line { animation-delay: 0.7s; }
  .item:nth-child(2) .line { animation-delay: 0.85s; }
  .item:nth-child(3) .line { animation-delay: 1.0s; }
  .item:nth-child(4) .line { animation-delay: 1.15s; }
  .item:nth-child(5) .line { animation-delay: 1.3s; }
  .item:nth-child(6) .line { animation-delay: 1.45s; }

  /* --- ANIMACIONES --- */
  @keyframes cardEntry {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes titleReveal {
    from { opacity: 0; transform: translateX(-30px); }
    to { opacity: 1; transform: translateX(0); }
  }

  @keyframes numberDrop {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes lineGrow {
    from { width: 0%; }
    to { width: 50px; } /* Crece hasta 50px */
  }
</style>

<Layout title="Contenido">
  <div class="slide-container">
    
    <div class="bg-glow"></div>

    <div class="left-bar">
      <div class="accent-line"></div>
    </div>

    <div class="main-content">
      <h1>CONTENIDO</h1>

      <div class="grid-container">
        {items.map((item) => (
          <div class="item">
            <span class="number">{item.number}</span>
            <div style="width: 100%">
              <span class="label">{item.title}</span>
              <span class="line"></span>
            </div>
          </div>
        ))}
      </div>
    </div>
    
  </div>
</Layout>